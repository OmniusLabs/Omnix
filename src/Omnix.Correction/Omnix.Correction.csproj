<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\Omnix.Base\Omnix.Base.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Nuget\build\netcoreapp2.2\Omnix.Correction.targets">
      <PackagePath>build/netcoreapp2.2/</PackagePath>
      <Pack>true</Pack>
    </Content>
    <Content Include="Assemblies\Linux\omnix-correction.x64.so">
      <CopyToOutputDirectory Condition=" '$(NativeDepsPlatform)' == 'Windows' ">PreserveNewest</CopyToOutputDirectory>
      <Link>omnix-correction.x64.so</Link>
      <Visible>false</Visible>
      <Pack>true</Pack>
      <PackagePath>runtimes\linux\native\omnix-correction.x64.so</PackagePath>
    </Content>
    <Content Include="Assemblies\Win\omnix-correction.x64.so">
      <CopyToOutputDirectory Condition=" '$(NativeDepsPlatform)' == 'Linux' ">PreserveNewest</CopyToOutputDirectory>
      <Link>omnix-correction.x64.so</Link>
      <Visible>false</Visible>
      <Pack>true</Pack>
      <PackagePath>runtimes\win\native\omnix-correction.x64.dll</PackagePath>
    </Content>
  </ItemGroup>

</Project>
