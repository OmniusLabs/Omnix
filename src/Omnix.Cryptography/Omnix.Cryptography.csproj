<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <IsPackable Condition=" '$(IsSubmodule)' != 'true' ">true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Nuget\build\netcoreapp3.0\Omnix.targets">
      <PackagePath>build/netcoreapp3.0/</PackagePath>
      <Pack>true</Pack>
    </Content>
    <Content Include="Assemblies\Win\hashcash.x64.exe">
      <CopyToOutputDirectory Condition=" '$(NativeDepsPlatform)' == 'Windows' ">PreserveNewest</CopyToOutputDirectory>
      <Link>hashcash.x64.exe</Link>
      <Visible>false</Visible>
      <Pack>true</Pack>
      <PackagePath>runtimes\win\native\hashcash.x64.exe</PackagePath>
    </Content>
    <Content Include="Assemblies\Linux\hashcash.x64">
      <CopyToOutputDirectory Condition=" '$(NativeDepsPlatform)' == 'Linux' ">PreserveNewest</CopyToOutputDirectory>
      <Link>hashcash.x64</Link>
      <Visible>false</Visible>
      <Pack>true</Pack>
      <PackagePath>runtimes\linux\native\hashcash.x64</PackagePath>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Omnix.Base\Omnix.Base.csproj" />
    <ProjectReference Include="..\Omnix.Collections\Omnix.Collections.csproj" />
    <ProjectReference Include="..\Omnix.Io\Omnix.Io.csproj" />
    <ProjectReference Include="..\Omnix.Serialization.RocketPack\Omnix.Serialization.RocketPack.csproj" />
    <ProjectReference Include="..\Omnix.Serialization\Omnix.Serialization.csproj" />
  </ItemGroup>

</Project>
