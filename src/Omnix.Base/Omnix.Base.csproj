<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <IsPackable Condition=" '$(IsSubmodule)' != 'true' ">true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="$(ProjectDir)..\..\src\Omnix.Common\**\*">
      <Link>Common\%(RecursiveDir)%(FileName)%(Extension)</Link>
    </Compile>
    <Content Include="Nuget\build\netcoreapp3.0\Omnix.Base.targets">
      <PackagePath>build/netcoreapp3.0/</PackagePath>
      <Pack>true</Pack>
    </Content>
    <Content Include="Assemblies\Win\omnix-base.x64.dll">
      <CopyToOutputDirectory Condition=" '$(NativeDepsPlatform)' == 'Windows' ">PreserveNewest</CopyToOutputDirectory>
      <Link>omnix-base.x64.dll</Link>
      <Visible>false</Visible>
      <Pack>true</Pack>
      <PackagePath>runtimes\win\native\omnix-base.x64.dll</PackagePath>
    </Content>
    <Content Include="Assemblies\Linux\omnix-base.x64.so">
      <CopyToOutputDirectory Condition=" '$(NativeDepsPlatform)' == 'Linux' ">PreserveNewest</CopyToOutputDirectory>
      <Link>omnix-base.x64.so</Link>
      <Visible>false</Visible>
      <Pack>true</Pack>
      <PackagePath>runtimes\linux\native\omnix-base.x64.so</PackagePath>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.IO.Pipelines" Version="4.6.0" />
  </ItemGroup>

</Project>
