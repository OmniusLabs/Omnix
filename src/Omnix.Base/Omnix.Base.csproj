<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.2</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <IsPackable>true</IsPackable>
    <Description></Description>
  </PropertyGroup>
    
  <ItemGroup>
    <PackageReference Include="System.IO.Pipelines" Version="4.5.3" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="$(ProjectDir)..\..\src\Omnix.Common\**\*.*">
      <Link>_Common\%(RecursiveDir)%(FileName)%(Extension)</Link>
    </Compile>
    <Content Include="build\netcoreapp2.2\Omnix.Base.targets">
      <PackagePath>build/netcoreapp2.2/</PackagePath>
      <Pack>true</Pack>
    </Content>
    <Content Include="runtimes\win\native\omnix-base.x64.dll">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        <Link>omnix-base.x64.dll</Link>
        <Visible>false</Visible>
        <Pack>true</Pack>
        <PackagePath>runtimes\win\native\omnix-base.x64.dll</PackagePath>
    </Content>
    <Content Include="runtimes\linux\native\omnix-base.x64.so">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        <Link>omnix-base.x64.so</Link>
        <Visible>false</Visible>
        <Pack>true</Pack>
        <PackagePath>runtimes\linux\native\omnix-base.x64.so</PackagePath>
    </Content>
  </ItemGroup>

</Project>
